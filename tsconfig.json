{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "eS6",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "declaration": true,
    "noUnusedLocals": false,
    "sourceMap": true
  },

  "exclude": [
    "node_modules"
  ]
}